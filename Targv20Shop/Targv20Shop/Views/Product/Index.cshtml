@model IEnumerable<Targv20Shop.Models.Product.ProductListViewModel>

@{ 
    int queueNumber = 0;
}

<div>
    <a asp-action="add" asp-controller="product" type="submit" class="btn btn-danger">Add</a>
</div>
<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col">Ammount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                queueNumber++;

                <tr>
                    <td class="">@queueNumber</td>
                    <td class="">@product.Name</td>
                    <td class="">@product.Description</td>
                    <td class="">@product.Price</td>
                    <td class="">@product.Ammount</td>
                    <td>
                        <a asp-action="edit" asp-controller="product" asp-route-id="@product.Id" class="btn btn-primary">Edit</a>
                        <input asp-action="delete" asp-controller="product" asp-route-id="@product.Id" type="submit" class="btn btn-danger" value="Delete">
                    </td>


                </tr>
            }
        </tbody>
    </table>
</form>