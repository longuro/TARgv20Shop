@model Targv20Shop.Models.Files.ExistingFilePathViewModel

@{
    var photoPaths = "~/multipleFileUpload/" + (Model.FilePath ?? "noimage.jpg");
}

<div class="form-group row col-sm-4 offset-2">
    <img class="card-img-top" src="@photoPaths" asp-append-version="true" />
    <input asp-action="removeImage" asp-controller="product" asp-route-photoId="@Model.PhotoId" type="submit" class="btn btn-danger" value="Remove Image" />
</div>