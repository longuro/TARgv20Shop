@model Targv20Shop.Models.Weather.SearchCity

<form method="post">
    <div class="container">
        <div class="form-group col-md-offset-2 col-md-5">
            <h2>Search the forecast in a city</h2>
            <label asp-for="CityName" style="font-family: Arial"></label>
            <input asp-for="CityName" class="form-control" />
            <span asp-validation-for="CityName" class="text-danger"></span>
        </div>
    </div>

    <div class="container">
        <div class="form-group col-md-offset-3 col-md-5">
            <button asp-controller="Weather" asp-action="SearchCity" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>